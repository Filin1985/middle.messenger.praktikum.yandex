<form class="form" action="submit">
  {{{Avatar user=user}}}
  <fieldset class="profile__set">
    {{#if isPasswordChange}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="oldPassword"
        name="oldPassword"
        type="password"
        value=user.password
        placeholder="Password"
        label="Old password"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="newPassword"
        name="newPassword"
        type="password"
        value=user.password
        placeholder="Password"
        label="New password"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="repeatPassword"
        name="repeatPassword"
        type="password"
        value=user.password
        placeholder="Password"
        label="Repeat password"
      }}}
    {{else}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="email"
        name="email"
        type="email"
        value=user.email
        placeholder="Enter your email"
        label="Email"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="login"
        name="login"
        type="text"
        value=user.login
        placeholder="Enter your login"
        label="Login"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="first_name"
        name="first_name"
        type="text"
        value=user.first_name
        placeholder="Enter_your_name"
        label="Name"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="second_name"
        name="second_name"
        type="text"
        value=user.second_name
        placeholder="Enter your surname"
        label="Surname"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="display_name"
        name="display_name"
        type="text"
        value=user.display_name
        placeholder="Enter your username"
        label="Username"
      }}}
      {{{InputAuth
        classType="user"
        isEdit="true"
        id="phone"
        name="phone"
        type="text"
        value=user.phone
        placeholder="Enter your phone"
        label="Phone"
      }}}
    {{/if}}
    {{#if isEdit}}
      {{{Button type="save" text="Save"}}}
    {{/if}}
  </fieldset>
</form>
