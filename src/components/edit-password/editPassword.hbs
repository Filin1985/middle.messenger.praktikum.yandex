<form class="form" action="submit">
  {{{Avatar user=user}}}
  <fieldset class="profile__set">
    {{{Input
      classType="user"
      isEdit="true"
      id="oldPassword"
      name="oldPassword"
      type="password"
      value=user.password
      placeholder="Password"
      label="Old password"
    }}}
    {{{Input
      classType="user"
      isEdit="true"
      id="newPassword"
      name="newPassword"
      type="password"
      value=user.password
      placeholder="Password"
      label="New password"
    }}}
    {{{Input
      classType="user"
      isEdit="true"
      id="repeatPassword"
      name="repeatPassword"
      type="password"
      value=user.password
      placeholder="Password"
      label="Repeat password"
    }}}
    {{{Button type="save" text="Save"}}}
  </fieldset>
</form>
