<li class="chat__item {{#if select}} chat__item_active{{/if}}">
  {{#with chat}}
    {{#if last_message}}
      <img src={{last_message.user.avatar}} alt="Avatar" class="chat__avatar" />
    {{else}}
      <img
        src="./assets/images/person_2.png"
        alt="Avatar"
        class="chat__avatar"
      />
    {{/if}}
    <div class="chat__person">
      <p class="chat__title">{{title}}</p>
      {{#if last_message}}
        <h3 class="chat__name">{{last_message.user.display_name}}</h3>
        <p class="chat__text">{{last_message.content}}</p>
      {{/if}}
    </div>
    <div class="chat__data">
      <p class="chat__time">{{time}}</p>
      <p class="chat__unread">{{unread_count}}</p>
    </div>
  {{/with}}
</li>
