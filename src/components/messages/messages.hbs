<div class="messages">
  <div class="messages__header">
    <div class="messages__person">
      {{#image
        src="person_2.png" alt="Avatar" class="avatar avatar_min"
      }}{{/image}}
      <h3 class="messages__name">Андрей</h3>
    </div>
    {{{Button type="func"}}}
  </div>
  <ul class="messages__list">
    {{#each messages as |message|}}
      {{{Message message=message owner=message.current_user}}}
    {{/each}}
  </ul>
  {{{InputMessage
    validateType="messageValidation"
    name="message"
    ref="message"
    onClick=onClick
  }}}
</div>
