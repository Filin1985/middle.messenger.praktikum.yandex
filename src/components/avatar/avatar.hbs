<div class="photo">
  <div class="photo__box">
    {{#if user.avatar}}
      <img src={{user.avatar}} alt="Avatar" class="photo__image" />
    {{else}}
      <img
        src="./assets/images/person_2.png"
        alt="Avatar"
        class="photo__image"
      />
    {{/if}}
    {{{Link to="change-avatar" type="change" page="ChangeAvatarPage"}}}
  </div>
  <h3 class="photo__name">{{user.first_name}}</h3>
</div>