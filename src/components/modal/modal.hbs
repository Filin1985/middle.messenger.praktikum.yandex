<form class="auth-form auth-form_absolute" action="submit">
  <div class="auth-form__header">
    <h2 class="auth-form__title">{{title}}</h2>
  </div>
  <fieldset class="auth-form__set">
    <label>
      <input
      {{#if class}} class="{{class}}"{{/if}}
      {{#if id}} id="{{id}}"{{/if}}
      {{#if name}} name="{{name}}"{{/if}}
      {{#if style}} style="{{style}}"{{/if}}
      {{#if type}} type="{{type}}"{{/if}}
      {{#if placeholder}} placeholder="{{placeholder}}"{{/if}}
      {{#if value}} value="{{value}}"{{/if}}
      {{#if accept}} accept="{{accept}}"{{/if}}
      />
      <span class="file__span">{{label}}</span>
    </label>
    <div class="modal__button">
      {{{Button
        onSubmit=onAddNewUser
        type="save"
        text=text
      }}}
      {{{Button
        onSubmit=onCloseModal
        type="close"
        text='Discard'
      }}}
    </div>
  </fieldset>
</form>
